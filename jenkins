pipeline{


    agent any 


    environment {
        GIT_SSH_KEY = credentials('SHA256:hIL9zhRzvQ9wqj7m2YkyBm4j6yrmpZEQLL3bThaXUSo')
    }


    stages{


        stage('Checkout from github'){
            steps {
            script{
                sh "ssh-agent bash -c 'ssh-add ${GIT_SSH_KEY}; git clone git@github.com:tsakhir53fjdkslajfdkslj/lastpipe.git' "
            }
            }
        }
        stage('Install dependencies'){
            steps {
                sh 'npm install'
            }
        }

        stage('Run Tests'){
            steps {
                sh 'npm test'
            }
        }
    }

}
